<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SubscriptionsFragment">

    <LinearLayout
        android:id="@+id/linearИoAccount"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:src="@drawable/playlistvideoicon"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Войдите в аккаунт"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Тогда в этом разделе появятся новые видео с каналов, на которые вы можете подписаться."
            android:textColor="#504F4F"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>